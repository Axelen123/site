{
    "extends": "astro/tsconfigs/strictest",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "$/*": [
                "src/*"
            ],
            "$components/*": ["src/components/*"],
            "$layouts/*": ["src/layouts/*"],
            "$styles/*": ["src/styles/*"],
            "$assets/*": ["assets/*"]
        }
    }
}
